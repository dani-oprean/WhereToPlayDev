                            if (Model.FileName1 != null)
                            {
                                string imageBase64 = Convert.ToBase64String(Model.Content1);
                                string imageSrc = string.Format("data:image/jpeg;base64,{0}", imageBase64);
                                <img src="@imageSrc" style="height:60px;width:80px;" />
