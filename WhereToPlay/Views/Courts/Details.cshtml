                            NZeceDoispe = false,
                            NDoispePaispe = false,
                            NPaispeSaispe = false,
                            NSaispeOptspe = false,
                            NOptspeDouazeci = false,
                            NDouazeciDouajdoi = false
                        })
                </dd>
            </dl>

        <div class="form-group">
            <input type="submit" value="Rezerva" class="btn btn-default" />
            <br />
            <br />
            @Html.ActionLink("Inapoi la terenuri", "Index", "Home")
        </div>


    </div>



