@model WhereToPlay.Models.DB.Court
@{ ViewBag.Title = "Rezerva teren"; }
<link href="~/Content/datepicker.css" rel="stylesheet" />


@using (Html.BeginForm("Rent", "Courts", FormMethod.Post))
{
    @Html.AntiForgeryToken()
