@model WhereToPlay.Models.ViewModel.CourtReservation

<script src="~/Scripts/jquery-ui-1.11.4.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/datePicker.js"></script>

@using (Html.BeginForm("Rent", "Courts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div>
    <h4>Court</h4>
    <hr />
    

            <p>@Html.DisplayFor(model => model.Court.CourtName) / @Html.DisplayFor(model => model.Court.Sport.SportName)</p>
            <p>@Html.HiddenFor(model=>model.Court.IDCourt)</p>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Court.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Court.Address.AddressStreet)
                    @Html.DisplayFor(model => model.Court.Address.AddressNumber)
                    @Html.DisplayFor(model => model.Court.Address.AddressCity)
                    @Html.DisplayFor(model => model.Court.Address.AddressCounty)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Court.User.UserName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Court.User.UserName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Court.Length)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Court.Length)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Court.Width)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Court.Width)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Court.PhoneNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Court.PhoneNumber)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Court.EmailAddress)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Court.EmailAddress)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Court.SessionPrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Court.SessionPrice)
                </dd>

           </dl>
    </div>

    <div>
        @{
            if (Model.Court.FileName1 != null)
            {
                string imageBase64 = Convert.ToBase64String(Model.Court.Content1);
                string imageSrc = string.Format("data:image/jpeg;base64,{0}", imageBase64);
                <img src="@imageSrc" style="height:200px;width:300px;" />
            }
        }
    </div>

    <div>
        @{
            if (Model.Court.FileName2 != null)
            {
                string imageBase64 = Convert.ToBase64String(Model.Court.Content2);
                string imageSrc = string.Format("data:image/jpeg;base64,{0}", imageBase64);
                <img src="@imageSrc" style="height:200px;width:300px;" />
            }
        }
    </div>

    <div>
        @{
            if (Model.Court.FileName3 != null)
            {
                string imageBase64 = Convert.ToBase64String(Model.Court.Content3);
                string imageSrc = string.Format("data:image/jpeg;base64,{0}", imageBase64);
                <img src="@imageSrc" style="height:200px;width:300px;" />
            }
        }
    </div>

    <hr />

    
        <dl class="dl-horizontal">

            <dt>
                @Html.LabelFor(model=>model.Date, "Data rezervarii")
            </dt>

            <dd>
                @Html.TextBoxFor(model=>model.Date, new { @class = "date-picker" })
            </dd>

            <dt>
                @Html.Label("","Ora rezervare")
            </dt>

            <dd>
                @Html.Partial("CourtReservationTime", Model)
            </dd>
        </dl>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rezerva" class="btn btn-default" />
            </div>
        </div>
    }

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Court.IDCourt }) |
    @Html.ActionLink("Back to List", "Index")
</p>


